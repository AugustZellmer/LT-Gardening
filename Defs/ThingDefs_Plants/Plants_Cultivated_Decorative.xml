<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<ThingDef ParentName="PlantBase">
		<defName>LT_PlantAstragalus</defName>
		<label>astragalus</label>
		<description>A small but tough wildflower that grows in alpine climates.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>12</Beauty>
			<Nutrition>0.05</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/astragalus</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<selectable>true</selectable>
		<ingestible />
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<sowWork>600</sowWork>
			<sowTags>
				<li>Ground</li>
				<li>Decorative</li>
			</sowTags>
			<growMinGlow>0.2</growMinGlow>
			<topWindExposure>0.3</topWindExposure>
			<growDays>1</growDays>
			<lifespanDaysPerGrowDays>10</lifespanDaysPerGrowDays>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.1</max>
			</visualSizeRange>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>

