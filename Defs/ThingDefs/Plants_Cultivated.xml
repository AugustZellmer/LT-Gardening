<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--=========================== Decorative ==============================-->

    <ThingDef Abstract="True" ParentName="PlantBase" Name="LT_PlantDecorativeBase">
        <statBases>
            <Nutrition>0.05</Nutrition>
        </statBases>
        <ingestible />
        <plant>
            <dieIfLeafless>true</dieIfLeafless>
            <fertilitySensitivity>1.0</fertilitySensitivity>
            <harvestTag>Standard</harvestTag>
            <sowTags>
                <li>Ground</li>
                <li>Decorative</li>
            </sowTags>
        </plant>
    </ThingDef>

    <ThingDef ParentName="LT_PlantDecorativeBase">
        <defName>LT_PlantAstragalus</defName>
        <label>astragalus</label>
        <description>A small wildflower that grows in alpine climates.</description>
        <statBases>
            <MaxHitPoints>85</MaxHitPoints>
            <Beauty>12</Beauty>
        </statBases>
        <graphicData>
            <texPath>Things/astragalus</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <altitudeLayer>Item</altitudeLayer>
        <selectable>true</selectable>
        <plant>
            <sowWork>400</sowWork>
            <sowTags>
                <li>Ground</li>
                <li>Decorative</li>
            </sowTags>
            <growMinGlow>0.3</growMinGlow>
            <growDays>1</growDays>
            <lifespanDaysPerGrowDays>10</lifespanDaysPerGrowDays>
            <visualSizeRange>
                <min>0.3</min>
                <max>1.1</max>
            </visualSizeRange>
        </plant>
    </ThingDef>

    <ThingDef ParentName="LT_PlantDecorativeBase">
        <defName>LT_PlantRosebay</defName>
        <label>rosebay</label>
        <description>A small but tough wildflower that grows in temperate climates.</description>
        <statBases>
            <MaxHitPoints>85</MaxHitPoints>
            <Beauty>18</Beauty>
        </statBases>
        <graphicData>
            <texPath>Things/rosebay</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <altitudeLayer>Item</altitudeLayer>
        <selectable>true</selectable>
        <plant>
            <sowWork>400</sowWork>
            <sowTags>
                <li>Ground</li>
                <li>Decorative</li>
            </sowTags>
            <growMinGlow>0.3</growMinGlow>
            <topWindExposure>0.1</topWindExposure>
            <growDays>1.5</growDays>
            <lifespanDaysPerGrowDays>14</lifespanDaysPerGrowDays>
            <visualSizeRange>
                <min>0.3</min>
                <max>1.05</max>
            </visualSizeRange>
        </plant>
    </ThingDef>

    <ThingDef ParentName="LT_PlantDecorativeBase">
        <defName>LT_PlantDelphinium</defName>
        <label>delphinium</label>
        <description>A beautiful cultivated flower with majestic purple hue. Must be replanted often.</description>
        <statBases>
            <MaxHitPoints>85</MaxHitPoints>
            <Beauty>32</Beauty>
        </statBases>
        <graphicData>
            <texPath>Things/delphinium</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <altitudeLayer>Item</altitudeLayer>
        <selectable>true</selectable>
        <plant>
            <sowWork>600</sowWork>
            <sowTags>
                <li>Ground</li>
                <li>Decorative</li>
            </sowTags>
            <growMinGlow>0.3</growMinGlow>
            <topWindExposure>0.1</topWindExposure>
            <growDays>1.5</growDays>
            <lifespanDaysPerGrowDays>3</lifespanDaysPerGrowDays>
            <visualSizeRange>
                <min>0.3</min>
                <max>1.4</max>
            </visualSizeRange>
        </plant>
    </ThingDef>

</Defs>
